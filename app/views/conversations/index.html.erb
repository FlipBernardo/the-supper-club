<div class="conversation-container">
  <div class="convo-header">
    <h1>Get <em>lost</em> in conversation</h1>
  </div>
  <div class="convo-card-container d-flex center">
    <div class="convo-header-cards conn-card center" onClick="document.getElementById('scroll-target-conn').scrollIntoView();">
