    <section class = "conn-convo-container" id ="scroll-target-conn">
      <div class = "row ">
      <div class="col-2 convo-left-desc">
        <h3>Connection</h3>
        <p>Work on the connection between you and your friends!</p>
      </div>

      <div class="col-10 travel-card-container">
      <% connection_convo = @convo.select { |convo| convo.topic == "Connection"} %>
      <% connection_convo.sample(4).each do |convo| %>
        <div class="flip convo-header-cards">
          <div class="front">
            <h2 class="conv-card-title"><%= convo.topic %></h2>
          </div>
            <div class="back">
            <p class="conv-description"><%= convo.subject %></p>
