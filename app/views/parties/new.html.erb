<div class="container">

<h1>Create a new party!</h1>
  <br>
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="pills-name-tab" data-bs-toggle="pill" data-bs-target="#pills-name" type="button" role="tab" aria-controls="pills-name" aria-selected="true">Name and details</button>
    </li>
    <%# <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-theme-tab" data-bs-toggle="pill" data-bs-target="#pills-theme" type="button" role="tab" aria-controls="pills-theme" aria-selected="false">Attendancy</button>
    </li> %>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-attendancy-tab" data-bs-toggle="pill" data-bs-target="#pills-date" type="button" role="tab" aria-controls="pills-date" aria-selected="false">Attendancy</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-attendancy-tab" data-bs-toggle="pill" data-bs-target="#pills-date" type="button" role="tab" aria-controls="pills-date" aria-selected="false">Theme</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-date-tab" data-bs-toggle="pill" data-bs-target="#pills-date" type="button" role="tab" aria-controls="pills-date" aria-selected="false">Budget</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-date-tab" data-bs-toggle="pill" data-bs-target="#pills-date" type="button" role="tab" aria-controls="pills-date" aria-selected="false">Dishes</button>
    </li>
    <%# <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-date-tab" data-bs-toggle="pill" data-bs-target="#pills-date" type="button" role="tab" aria-controls="pills-date" aria-selected="false">Theme</button>
    </li> %>
  </ul>
      <div class="tab-content" id="pills-tabContent">

        <div class="tab-pane fade show active" id="pills-name" role="tabpanel" aria-labelledby="pills-name-tab" tabindex="0">
          <h2>Name and details</h2>
          <%= simple_form_for @party do |f| %>
            <%= f.input :title, placeholder: "Name your dinner party" %>
            <%= f.input :address, placeholder: "Where is your dinner party" %>
            <%# <%= f.input :theme, placeholder: "What is your theme" %> %>
            <%= "Choose a date" %>
            <%= f.input :date, html: true %>
            <%= "Add a date" %>
            <%# if statement: if "plus" add a line for the date %>
            <%# <% button_to "plus" %> %>
            <span id="pills-theme" class="btn btn-primary">Next page</span>
        </div>

        <div class="tab-pane fade" id="pills-date" role="tabpanel" aria-labelledby="pills-date-tab" tabindex="0">
          <h2>Who is coming?</h2>
        </div>

        <div class="tab-pane fade" id="pills-date" role="tabpanel" aria-labelledby="pills-date-tab" tabindex="0">
          <h2>Choose themes</h2>
          <%= simple_form_for [@party] do |f| %>
            <%= f.input :category, placeholder: "Name your theme" %>
          <% end %>
        </div>

        <div class="tab-pane fade" id="pills-date" role="tabpanel" aria-labelledby="pills-date-tab" tabindex="0">
          <h2>How many dishes do you want?</h2>
        </div>

        <div class="tab-pane fade" id="pills-date" role="tabpanel" aria-labelledby="pills-date-tab" tabindex="0">
          <h2>What is your budget?</h2>
        </div>

      </div>

    <%= f.submit class: "btn submit-btn" %>
  <% end %>
  <br>


</div>
