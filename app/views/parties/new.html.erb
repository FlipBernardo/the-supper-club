<body id = "green">
<div class= "create-party-container center" data-controller="navtab-active">
<div class="tabs d-flex center">
    <button class="btn btn-dark"  data-navtab-active-target="tab" data-action="click->navtab-active#show">Invite</button>
    <%# <button class="btn" data-navtab-active-target="tab" data-action="click->navtab-active#show">Loading</button> %>
    <button class="btn" data-navtab-active-target="tab" data-action="click->navtab-active#show">Theme</button>
    <button class="btn" data-navtab-active-target="tab" data-action="click->navtab-active#show">Guests</button>
    <button class="btn" data-navtab-active-target="tab" data-action="click->navtab-active#show">Dishes</button>
    <button class="btn" data-navtab-active-target="tab" data-action="click->navtab-active#show">Recipes</button>
</div>
  <div class="tab-content-container">
    <div class="tab-content-invite display-a" data-navtab-active-target="content" data-attribute="Invite">
      <div class="row detail-container">
        <div class = "col-6">
          <%= image_tag "Dinner_party_1.png", class: "img-create"%>
        </div>
        <div class = "col-6 text-start">
          <p> First things first, give your party some info </p>
          <h2>Hey! It's <em><%= current_user.name %></em>,</h2>
          <%= simple_form_for @party, html: { class: 'form-horizontal' },wrapper: :horizontal_form do |f| %>
          <div class="inline-form col-12"><h2>Come to my &nbsp</h2><%= f.input :title,  label: false, placeholder: "party name?"%><h2>&nbsp!</h2>
          </div>
          <div class="inline-form col-12"><h2>It's at &nbsp</h2><%= f.input :address, label: false, placeholder: "where?" %></div>
          <div class="inline-form col-12"><h2>On &nbsp</h2><%= f.input :date, label: false, html5: true %></div>
          <h2>See you there!<h2>
        </div>
      </div>
    </div>
    <%# <div class="tab-content-loading d-none" data-navtab-active-target="content" data-attribute="Loading">
    </div> %>
    <div class="tab-content-theme d-none" data-navtab-active-target="content" data-attribute="Theme">
      <div class="row">
        <div class="col-6 theme-container-left center">
          <h2>What's the theme?</h2>
          <%= image_tag "create_img2.png" %>
        </div>
        <div class="col-6">
          <div class="row justify-content-center">
            <div class="col-sm-12 text-center">
              <div class="d-flex flex-wrap justify-content-center pt-4">
              <% Theme::CATEGORY.each do |theme| %>
                <div class="clickable">
                  <p> <%= theme %> </p>
                </div>
              <% end %>
              </div>
            </div>
          </div>
          <%= f.input :theme, collection: Theme::CATEGORY %>
        </div>
      </div>
    </div>
    <div class="tab-content-guests d-none" data-navtab-active-target="content" data-attribute="Guests">
      <%= image_tag "create_img1.png" %>
      <h2>How many people<br>are you inviting?</h2>
      <br>
      <div class="guest-card center">
        <h2><%= f.input :attendancy, placeholder: "0", label:false %></h2>
      </div>
    </div>
    <div class="tab-content-dishes d-none" data-navtab-active-target="content" data-attribute="Dishes">
     <div class="row align-items-start center">
        <h2>How many dishes<br>would you like to make?</h2>
        <br>
          <div class="dishes-card col-3 center" ><%= f.input :appetizers, placeholder: "0"  %></div>
          <div class="dishes-card col-3 center" ><%= f.input :mains, placeholder: "0" %></div>
          <div class="dishes-card col-3 center" ><%= f.input :desserts, placeholder: "0" %></div>
          <%= image_tag "create-img3.png", class: "img-dishes" %>
      </div>
    </div>
    <div class="tab-content-recipes d-none" data-navtab-active-target="content" data-attribute="Recipes">
    <%# draggable %>
      <h2>On the menu</h2>
      <div data-controller="search-recipes" class=" pt-3">
        <div>
          <%= simple_form_for new_party_path, method: :get, html: { data: { search_recipes_target: "form", action: "submit->search-recipes#search"}} do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "search recipes",
            data: {search_recipes_target: "input"}  %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </div>
      <br>
      <br>
      <div class="container" data-controller="draggable">
        <div class="row border border-5 pb-3" style="height:500px" id="emptyspace"  data-search-recipes-target="empty">
        </div>
      <br>
      <div class="row" id="ourlist"  data-search-recipes-target="content">
      </div>
        </div>
      </div>
    </div>
  </div>

<button class="btn-group next-tab" data-action="click->navtab-active#next" data-navtab-active-target="link">Next</button>
<button class="btn-group back-tab" data-action="click->navtab-active#next" data-navtab-active-target="link">Back</button>
<% end %> <%# END OF FORM %>
  <%# <button class="btn-group back-tab">Back</button> %>
</div>
