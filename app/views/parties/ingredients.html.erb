<html>
  <body>
    <div class="container mt-2 p-0 mx-0">
      <div class="d-flex">
          <%= render 'shared/party_info' %>
        <div class="ingredient-container col-9">
          <div class= "d-flex flex-row justify-content-between ">
            <div>
              <h2> Ingredient list </h2>
              <%# <%= image_tag("download.png")  %>
            </div>
            <div class="align-self-center">
              <%= button_to "", class:"download-btn" do %>
                <i class="fa-solid fa-arrow-down-to-bracket"></i>
                <i class="fas fa-download"></i>
                Save list as PDF
              <% end %>
            </div>
          </div>
            <ul>
            <div class="row justify-content-between">
              <%  @ingredients.each do |ingredient| %>
              <li class ="ingredient d-flex flex-column">
              <div>
                <%= check_box_tag ingredient, false %> <%= ingredient %>
              </div>
              </li>
              <li class ="ingredient d-flex justify-content-end">
              <div>
                <%= "Amount" %>
              </div>
              </li>
              <% end %>
            </div>
            </ul>
            <br>
        </div>
      </div>
    </div>
  </body>
</html>
